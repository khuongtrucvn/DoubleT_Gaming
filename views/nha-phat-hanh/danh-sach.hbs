  <!-- product category -->
  <section id="aa-product-category">
    <div class="container">
      <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-8 col-md-push-3">
          <div class="aa-product-catg-content">
            <div class="aa-product-catg-head">
              <div class="aa-product-catg-head-left">
                  <form action="/san-pham/sap-xep/" method="post" class="aa-sort-form">
                      <label for="">Sắp xếp theo</label>
                      <select name="Filter">
                          <option value="1" selected="Mặc định">Mặc định</option>
                          <option value="2">Giá tiền tăng dần</option>
                          <option value="3">Giá tiền giảm dần</option>
                          <option value="4">Tên tăng dần</option>
                          <option value="5">Tên giảm dần</option>
                      </select>
                      <button type="submit" class="btn btn-default">Sắp xếp</button>
                  </form>
              </div>
              <div class="aa-product-catg-head-right">
                <a id="grid-catg" href="#"><span class="fa fa-th"></span></a>
                <a id="list-catg" href="#"><span class="fa fa-list"></span></a>
              </div>
            </div>
            <div class="aa-product-catg-body">
              <ul class="aa-product-catg">
                  {{#if products}}
                      {{#each products}}
                          <li>
                              <figure>
                                  <a class="aa-product-img" href="/san-pham/id={{this.pid}}"><img class="product-frame-size" src="{{this.avatar}}" alt="img"></a>
                                  <a class="aa-add-card-btn"href="#"><span class="fa fa-shopping-cart"></span>Thêm vào giỏ</a>
                                  <figcaption>
                                      <h4 class="aa-product-title"><a href="/san-pham/id={{this.pid}}">{{this.name}}</a></h4>
                                      <span class="aa-product-price">{{this.price}} VND</span>
                                  </figcaption>
                              </figure>
                          </li>
                      {{/each}}
                  {{/if}}
              </ul>
            </div>
            <div class="aa-product-catg-pagination">
              <nav>
                <ul class="pagination">
                  <li>
                    <a href="#" aria-label="Trang trước">
                      <span aria-hidden="true">&laquo;</span>
                    </a>
                  </li>
                  <li><a href="#">1</a></li>
                  <li><a href="#">2</a></li>
                  <li><a href="#">3</a></li>
                  <li><a href="#">4</a></li>
                  <li><a href="#">5</a></li>
                  <li>
                    <a href="#" aria-label="Trang kế">
                      <span aria-hidden="true">&raquo;</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-4 col-md-pull-9">
          <aside class="aa-sidebar">
            <!-- single sidebar -->
            <div class="aa-sidebar-widget">
              <h3>Nhà sản xuất</h3>
              <ul class="aa-catg-nav">
                  {{#if publishers}}
                      {{#each publishers}}
                          <li><a href="/nha-phat-hanh/pbid={{this.pbid}}">{{this.name}}</a></li>
                      {{/each}}
                  {{/if}}
              </ul>
            </div>
            <!-- single sidebar -->
            <div class="aa-sidebar-widget">
              <h3>Thể loại</h3>
              <div class="tag-cloud">
                  {{#if categories}}
                      {{#each categories}}
                          <a href="/the-loai/cid={{this.id}}">{{this.name}}</a>
                      {{/each}}
                  {{/if}}
              </div>
            </div>
			
            <!-- single sidebar -->
            <div class="aa-sidebar-widget">
              <h3>Recently Views</h3>
              <div class="aa-recently-views">
                <ul>
                  <li>
                    <a href="chi-tiet.hbs" class="aa-cartbox-img"><img alt="img" src="/images/game/mortal-kombat-11.png"></a>
                    <div class="aa-cartbox-info">
                      <h4><a href="chi-tiet.hbs">God Of War 4</a></h4>
                      <p>1 x 990.000 VND</p>
                    </div>                    
                  </li>
                  <li>
                    <a href="chi-tiet.hbs" class="aa-cartbox-img"><img alt="img" src="/images/game/pubg.jpg"></a>
                    <div class="aa-cartbox-info">
                      <h4><a href="chi-tiet.hbs">PLAYERUNKNOWN'S BATTLEGROUNDS</a></h4>
                      <p>1 x 340.000 VND</p>
                    </div>                    
                  </li>
                   <li>
                    <a href="chi-tiet.hbs" class="aa-cartbox-img"><img alt="img" src="/images/game/sekiro.jpg"></a>
                    <div class="aa-cartbox-info">
                      <h4><a href="chi-tiet.hbs">Sekiro: Shadows Die Twice</a></h4>
                      <p>1 x 1.290.000 VND</p>
                    </div>                    
                  </li>                                      
                </ul>
              </div>                            
            </div>            
          </aside>
        </div>      
      </div>
    </div>
  </section>
  <!-- / product category -->