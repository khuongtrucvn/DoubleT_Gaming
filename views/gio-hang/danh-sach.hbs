<!-- Cart view section -->
 <section id="cart-view">
   <div class="container">
     <div class="row">
       <div class="col-md-12">
         <div class="cart-view-area">
           <div class="cart-view-table">
             <form action="">
               <div class="table-responsive">
                  <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>Mã sản phẩm</th>
                            <th>Số lượng</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#if carts}}
                        {{#each carts}}
                            <tr>
                                <td><a class="remove" href="#">Thanh toán</a></td>
                                <td><a href="#"><img src="{{this.url}}" alt="img"></a></td>
                                <td><a class="aa-cart-title" href="/san-pham/id={{this.pid}}">{{this.pname}}</a></td>
                                <td><input class="aa-cart-quantity" type="number" value="{{this.quantity}}"></td>
                                <td><a class="remove" href="#"><fa class="fa fa-save"></fa></a></td>
                                <td><a class="remove" href="#"><fa class="fa fa-close"></fa></a></td>
                            </tr>
                        {{/each}}
                    {{/if}}
                      <tr>
                        <td colspan="6" class="aa-cart-view-bottom">
                          <div class="aa-cart-coupon">
                            <input class="aa-coupon-code" type="text" placeholder="Mã khuyến mãi">
                            <input class="aa-cart-view-btn" type="submit" value="Áp dụng khuyến mãi">
                          </div>
                        </td>
                      </tr>
                      </tbody>
                  </table>
                </div>
             </form>
           </div>
         </div>
       </div>
     </div>
   </div>
 </section>
 <!-- / Cart view section -->