  <!-- product category -->
  <section id="aa-product-details">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="aa-product-details-area">
            <div class="aa-product-details-content">
              <div class="row">
                <!-- Modal view slider -->
                <div class="col-md-5 col-sm-5 col-xs-12">                              
                  <div class="aa-product-view-slider">                                
                    <div id="demo-1" class="simpleLens-gallery-container">
                      <div class="simpleLens-container">
                        <div class="simpleLens-big-image-container"><a data-lens-image="{{product.imgurl1}}" class="simpleLens-lens-image"><img src="{{product.imgurl1}}" class="simpleLens-big-image"></a></div>
                      </div>
                      <div class="simpleLens-thumbnails-container">
                          <a data-big-image="{{product.imgurl1}}" data-lens-image="{{product.imgurl1}}" class="simpleLens-thumbnail-wrapper" href="#">
                            <img class="view-slider-size" src="{{product.imgurl1}}">
                          </a>                                    
                          <a data-big-image="{{product.imgurl2}}" data-lens-image="{{product.imgurl2}}" class="simpleLens-thumbnail-wrapper" href="#">
                            <img class="view-slider-size" src="{{product.imgurl2}}">
                          </a>
                          <a data-big-image="{{product.imgurl3}}" data-lens-image="{{product.imgurl3}}" class="simpleLens-thumbnail-wrapper" href="#">
                            <img class="view-slider-size" src="{{product.imgurl3}}">
                          </a>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Modal view content -->
                <div class="col-md-7 col-sm-7 col-xs-12">
                  <div class="aa-product-view-content">
                    <h2>{{product.name}}</h2>
                    <div class="aa-price-block">
                      <span class="aa-product-view-price">Giá tiền: {{product.price}} VND</span>
                      <p class="aa-product-avilability">Trạng thái: <span>Còn hàng</span></p>
                    </div>
                    <div class="aa-prod-quantity">                   
					  <h4 class="aa-prod-category">Nhà phát triển: <a href="#">{{product.developer}}</a>
                      </h4></br>
					  <h4 class="aa-prod-category">Nhà phát hành: <a href="/nha-phat-hanh/pbid={{product.pbid}}">{{product.pbname}}</a>
                      </h4></br>
                      <h4 class="aa-prod-category">Thể loại: <a href="/the-loai/cid={{product.cid}}">{{product.cname}}</a>
                      </h4></br>
					  <h4 class="aa-prod-category">Số lượng:
					  </h4>
					  <form action="">
                        <select id="" name="">
                          <option selected="1" value="0">1</option>
                          <option value="1">2</option>
                          <option value="2">3</option>
                          <option value="3">4</option>
                          <option value="4">5</option>
                          <option value="5">6</option>
						  <option value="6">7</option>
                          <option value="7">8</option>
                          <option value="8">9</option>
                          <option value="9">10</option>
                        </select>
                      </form>
                    </div>
                    <div class="aa-prod-view-bottom">
                      <a class="aa-add-to-cart-btn" href="#">Thêm vào giỏ</a>
                      <a class="aa-add-to-cart-btn" href="#">Thêm vào Wishlist</a>
                      <a class="aa-add-to-cart-btn" href="#">So sánh</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="aa-product-details-bottom">
              <ul class="nav nav-tabs" id="myTab2">
                <li><a href="#description" data-toggle="tab">Mô tả</a></li>
                <li><a href="#review" data-toggle="tab">Nhận xét</a></li>                
              </ul>

              <!-- Tab panes -->
              <div class="tab-content">
                <div class="tab-pane fade in active" id="description">
                  <p>{{product.description}}</p>
                </div>
                <div class="tab-pane fade " id="review">
                 <div class="aa-product-review-area">
                   <h4>{{comments.count}} bình luận</h4>
                   <ul class="aa-review-nav">
                       {{#if comments.rows}}
                           {{#each comments.rows}}
                               <li>
                                   <div class="media">
                                       <div class="media-left">
                                           <a href="#">
                                               <img class="media-object" src="/images/client.png" alt="image">
                                           </a>
                                       </div>
                                       <div class="media-body">
                                           <h4 class="media-heading"><strong>{{this.name}}</strong> - <span>{{this.datecomment}}</span></h4>
                                           <p>{{this.description}}</p>
                                       </div>
                                   </div>
                               </li>
                           {{/each}}
                       {{/if}}
                   </ul>
                   <h4>Thêm nhận xét</h4>
                   <!-- review form -->
                   <form action="/san-pham/binh-luan/{{product.pid}}" class="aa-review-form" method="post">
                      <div class="form-group">
                        <label for="message">Nhận xét của bạn</label>
                        <textarea class="form-control" rows="3" name="Message" id="message" placeholder="Ghi bình luận của bạn..."></textarea>
                      </div>
                      <div class="form-group">
                        <label for="name">Tên</label>
                        <input type="text" class="form-control" name="Name" id="name" placeholder="Họ tên">
                      </div>
                      <button type="submit" class="btn btn-default aa-review-submit">Gửi</button>
                   </form>
                 </div>
                </div>            
              </div>
            </div>

            <!-- Related product -->
            <div class="aa-product-related-item">
              <h3>Game tương tự</h3>
              <ul class="aa-product-catg aa-related-item-slider">
                  {{#if related}}
                      {{#each related}}
                          <li>
                              <figure>
                                  <a class="aa-product-img" href="/san-pham/id={{this.pid}}"><img src="{{this.avatar}}" alt="img"></a>
                                  <a class="aa-add-card-btn"href="#"><span class="fa fa-shopping-cart"></span>Add To Cart</a>
                                  <figcaption>
                                      <h4 class="aa-product-title"><a href="/san-pham/id={{this.pid}}">{{this.name}}</a></h4>
                                      <span class="aa-product-price">{{this.price}} VND</span>
                                  </figcaption>
                              </figure>
                          </li>
                      {{/each}}
                  {{/if}}
              </ul>
            </div>  
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- / product category -->